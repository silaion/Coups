<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/abc_cab_background_bottom_holo_light" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sign_before"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/bar1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sign_et_name"
        android:layout_alignBottom="@+id/sign_et_name"
        android:layout_alignLeft="@+id/textView3"
        android:text="이름"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/sign_et_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sign_et_birth"
        android:layout_below="@+id/imageView2"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/sign_before"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignParentLeft="true"
        android:text="◀" />

    <Button
        android:id="@+id/sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="가입하기"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/sign_et_phoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sign"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:ems="10"
        android:inputType="phone" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sign_et_phoneNum"
        android:layout_alignLeft="@+id/textView3"
        android:layout_marginBottom="16dp"
        android:text="전화번호"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_et_name"
        android:layout_marginTop="33dp"
        android:layout_toLeftOf="@+id/sign_et_name"
        android:text="성별"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sign"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="회원가입"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/sign_et_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView5"
        android:layout_alignLeft="@+id/sign_et_phoneNum"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:inputType="date" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sign_et_birth"
        android:layout_alignLeft="@+id/textView3"
        android:layout_marginBottom="21dp"
        android:text="생년월일"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

	        <sign_radioGroup
	            android:id="@+id/sign_radioGroup"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_above="@+id/textView4"
	            android:layout_alignRight="@+id/editText4"
	            android:layout_alignTop="@+id/textView3"
	            android:layout_toRightOf="@+id/textView4"
	            android:orientation="horizontal" >

	            <RadioButton
	                android:id="@+id/sign_rb_male"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="0.01"
	                android:text="남"
	                android:textColor="#000000" />

	            <RadioButton
	                android:id="@+id/sign_rb_female"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="0.01"
	                android:text="여"
	                android:textColor="#000000" />

	        </sign_radioGroup>

</RelativeLayout>